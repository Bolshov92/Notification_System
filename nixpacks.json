        "SPRING_DATASOURCE_URL": "jdbc:mysql://event-db:3306/events_db",
        "SPRING_DATASOURCE_USERNAME": "event_user",
        "SPRING_DATASOURCE_PASSWORD": "$EVENT_DB_PASSWORD",
        "SPRING_KAFKA_BOOTSTRAP_SERVERS": "kafka:9092"
      }
    },
    "file-service": {
